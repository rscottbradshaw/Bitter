<div class="row">


  <div class="large-6 columns">

    <%= image_tag("sour_apple.png", :class => "apple") %>

  </div>

  <aside class="large-4 columns">

    <div class="panel">

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true %>
            <%= f.input :password, required: false %>
                <div class="form-actions right inline">
                  <%= f.button :submit, "Sign in", class: "radius round small" %>
                </div>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>


      <% end %>

      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
      <% end -%>
    </div>

    <div class="panel">

      <h5><strong>New to Bitter?</strong> Sign up</h5>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true %>
            <%= f.input :password, required: true %>
            <%= f.input :password_confirmation, required: true %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up", class: "radius round small" %>
          </div>
      <% end %>

      <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
          <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
      <% end -%>
    </div>
  </aside>
</div>






<footer class="row">
  <div class="large-12 columns">
    <hr/>
    <div class="row">
      <div class="large-6 columns">
        <p>A Bradshaw Production</p>
      </div>
    </div>
  </div>
</footer>















